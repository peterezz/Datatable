@{
    ViewData["Title"] = "datatable client side";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

<br />
<br />
<div class="container">
    <!-- Inputs -->
    <h3 id="AvalableDocs">Available documents</h3>
    <hr>
    <div class="row">
        <div class="col-sm-12 margin-bottom30">
            <table id="StudentsList" class="table table-striped table-bordered dt-responsive nowrap">
                <thead>
                    <tr>
                        <th>Ssn</th>
                        <th>Photo</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Gender</th>
                        <th>Phone Number</th>
                        <th>Birthday</th>
                        <th>Stage</th>
                        <th>Email Address</th>
                        <th>Address</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Students)
                    {
                        <tr>
                            <td>@item.Ssn</td>
                            <td><img src="@item.Photo"> </td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.GenderNavigation.Name</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Birthday</td>
                            <td>@item.StageNavigation.Name</td>
                            <td>@item.EmailAddress</td>
                            <td>@item.Address</td>
                        </tr>

                    }
                   
                </tbody>
                <tfoot>
                    <tr>
                        <th>Ssn</th>
                        <th>Photo</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Gender</th>
                        <th>Phone Number</th>
                        <th>Birthday</th>
                        <th>Stage</th>
                        <th>Email Address</th>
                        <th>Address</th>
                    </tr>
                </tfoot>
               
            </table>
        </div><!--services col-->

    </div>
</div>
@section _StudentsDatatable
    {

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#StudentsList').dataTable({
                "lengthChange": true,
                "processing": true,
                "paging": true,
               "searching" : true,
               "ordering" : true,
               "info" : true,
                "filter": true,
                "responsive" : true,
                "scrollY": '500px',
                "scrollCollapse": true,
                "scrollX": true,
                "autoWidth": true,

              
               
            });
        });
               
    </script>


        }

